<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>編集ページ</h2>
    <%= form_with model: @user, url: public_user_path, local:true do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control email" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
      </div>
        <div class="col-3 offset-md-1 mt-3">
          <%= link_to "退会する", public_user_unsubscribe_path, class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
