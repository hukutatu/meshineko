<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-9 col-lg-3 px-3 px-sm-0 mx-auto">
      <h2>編集ページ</h2>
      <%= form_with model: @user, url: public_user_path, local:true do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
       <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control email" %>
        </div>
        <div class="form-group">
          <%= f.submit "更新するにゃ", class: 'btn btn-secondary' %>
        </div>
        <div class="form-group">
            <%= link_to "退会するにゃ", public_user_unsubscribe_path(@user), class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
