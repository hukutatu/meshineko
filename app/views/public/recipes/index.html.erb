<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>画像だにゃ</th>
      <th>料理名だにゃ</th>
      <th>説明するにゃ</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td>
          <%= link_to (public_user_path(recipe.user.id)) do %>
           <% if recipe.image.attached? %>
             <%=image_tag recipe.image, size:'100x100' %>
           <% end %>
          <% end %>
        </td>
        <td><%= recipe.title %></td>
        <td><%= recipe.capion %></td>
        <td class=<%= "favorite-" + recipe.id.to_s %> >
          <%= render "public/favorites/btn", recipe: recipe %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
