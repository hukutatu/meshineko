<table>
  <tbody>
      <% recipe.recipe_comments.each do |recipe_comment| %>
      <tr>

        <td>
          <%= link_to public_user_path(recipe_comment.user) do %>
            <%= image_tag recipe_comment.user.get_image(100,100) %><br>
            <%= recipe_comment.user.name %>
          <% end %>
        </td>
        <td><%= recipe_comment.opinion %></td>
        <td>
          <% if recipe_comment.user == current_user %>
            <%= link_to "Destroy",  public_recipe_comment_path(recipe_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
