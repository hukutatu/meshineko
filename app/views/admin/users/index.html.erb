<div class='container'>
<div class='row pt-5'>
<div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto">
  <h3 class='row py-4'>ユーザー一覧</h3>
  <table class="table table-hover">
  <thead class="table-active">
    <tr>
      <th>ユーザー一覧</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
   <% @user.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, edit_admin_user_path(user.id) %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.is_deleted == false %>
            <div>有効</div>
          <% else %>
            <div>退会</div>
          <% end %>
        </td>
      </tr>
   <% end %>
  </tbody>
  </table>
</div>
</div>
</div>